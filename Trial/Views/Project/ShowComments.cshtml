@model IEnumerable<Trial.Models.CommentViewModel>




<div class="modal-body">
    <div class="row modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h3>COMMENTS</h3>
    </div>

        <div class="row">

            <table table id="comments" class="display">
                <thead>
                    <tr>
                        <th>PROJECT MANAGAER</th>
                        <th>COMMENT</th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>
                                @item.User.UserName
                            </td>

                            <td>
                                @item.Comment.CommentDesc
                            </td>

                        </tr>
                    }
                </tbody>


            </table>
            &nbsp;
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <button type="button" class="btn btn-default"
                        data-dismiss="modal">
                    Close
                </button>
            </div>
        </div>
    
</div>



<script>
        $(document).ready(function () {
            $("#comments").DataTable();

        });
        $(function () {
            $('#approve-btn').click(function () {
                $('#modal-container').modal('hide');
            });
        });


</script>