@model IEnumerable<Trial.Models.AssignedProjectViewModel>
<h2 class="row manage-title">MANAGE TEAM</h2><br />



    <table id="team" class="display">
        <thead>
            <tr>
                <th>USER NAME</th>
                <th>EMAIL</th>
                <th>FIRST NAME</th>
                <th>LAST NAME</th>
                <th>PHONE NUMBER</th>
                <th>REMOVE</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.UserName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.User.Email)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.User.Fname)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.User.Lname)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.User.PhoneNum)
                    </td>

                    <td>
                        <a title="Remove" class="removemember" href="@Url.Action("RemoveMember", "Project", new { id = item.Project.Id,memberid = item.User.Id })">
                            <span class="glyphicon glyphicon-remove"></span>
                        </a>
                    </td>


                </tr>
            }
        </tbody>

    </table>

    <script>
        $(document).ready(function () {
            $("#team").DataTable();
        });
        
        $("#team").on("click", ".removemember", function (e) {

            e.preventDefault();
            var location = $(this).attr('href');


            bootbox.confirm("Are you sure you want to remove this member?", function (result) {
                if (result) {
                    window.location.replace(location);

                }
            });



        });

       



    </script>
