@model IEnumerable<Trial.Models.EditUserViewModel>
<h1 class="row manage-title">MANAGE USERS</h1><br />
<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        padding: 8px;
        text-align: center;
        border-bottom: 1px solid #ddd;
    }

    tr:hover {
        background-color: #f5f5f5;

    }
    
</style>
<div class="row">
    <div class="col-lg-1">
        <a class="btn btn-success btn-block" href="Register">Add User</a>
    </div>
</div><br /><br />

<div class="row">
    <div class="col-sm-4">
        <h2 class="table-head">USER NAME</h2>
    </div>
    <div class="col-sm-4">
        <h2 class="table-head">EMAIL</h2>

    </div>
    <div class="col-sm-4">
        <h2 class="table-head">ACTION</h2>
    </div>
</div><hr /><br />
<table class="table">
    

    @foreach (var item in Model)
    {
        <tr style=":hover">
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            
            <td>
