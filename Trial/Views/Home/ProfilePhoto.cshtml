
@using (Html.BeginForm("ProfilePhoto", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div style="border:2px solid;border-radius:15px;color:#286090">

        
        <div class="editor-field" style="margin-left:100px;margin-top:25px;">
            <input name="ProfilePhoto" id="profile" type="file" />
            
        </div>
        <p>
            <input class="btn btn-primary" type="submit" value="Upload" style="margin-top:20px;margin-left:-10px" />
            
        </p>
    </div>

    }